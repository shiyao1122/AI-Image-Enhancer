{
  "openapi": "3.0.1",
  "info": {
    "title": "AI Image Enhancer API",
    "version": "1.0.0",
    "description": "Enhances images using Replicate AI model. Accepts an image URL and returns an enhanced image."
  },
  "servers": [
    {
      "url": "https://ai-image-enhancer-71kc.onrender.com",
      "description": "Render hosted API"
    }
  ],
  "paths": {
    "/enhance": {
      "post": {
        "summary": "Enhance an image using AI",
        "operationId": "enhanceImage",
        "description": "Takes an image URL and returns an enhanced version using AI upscaling.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "image_url": {
                    "type": "string",
                    "description": "URL of the image to enhance"
                  }
                },
                "required": ["image_url"]
              },
              "example": {
                "image_url": "https://replicate.delivery/pbxt/sample.webp"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Enhanced image successfully generated.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "input_image": {
                      "type": "string",
                      "description": "Original image URL"
                    },
                    "enhanced_image": {
                      "type": "string",
                      "description": "Enhanced image URL"
                    },
                    "status": {
                      "type": "string",
                      "description": "Processing status"
                    }
                  },
                  "required": ["enhanced_image", "status"]
                },
                "example": {
                  "input_image": "https://replicate.delivery/pbxt/sample.webp",
                  "enhanced_image": "https://replicate.delivery/pbxt/sample_enhanced.jpg",
                  "status": "success"
                }
              }
            }
          },
          "400": {
            "description": "Invalid or missing image_url"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {}
}
