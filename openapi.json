{
  "openapi": "3.0.1",
  "info": {
    "title": "AI Image Enhancer API",
    "version": "1.0.0",
    "description": "Enhance images using Replicate model. Accepts an image URL and returns the enhanced version."
  },
  "servers": [
    {
      "url": "https://ai-image-enhancer-71kc.onrender.com"
    }
  ],
  "paths": {
    "/enhance": {
      "post": {
        "summary": "Enhance an image using AI",
        "operationId": "enhanceImage",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "image_url": {
                    "type": "string",
                    "description": "The image URL to enhance"
                  }
                },
                "required": ["image_url"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The enhanced image URL is returned.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "input_image": {
                      "type": "string",
                      "description": "Original image URL"
                    },
                    "enhanced_image": {
                      "type": "string",
                      "description": "Enhanced image URL"
                    },
                    "status": {
                      "type": "string",
                      "description": "Operation status"
                    }
                  },
                  "required": ["enhanced_image", "status"]
                }
              }
            }
          },
          "400": {
            "description": "Invalid request or missing image_url"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}
